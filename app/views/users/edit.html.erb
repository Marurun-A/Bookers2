<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user, url: book_path(@user.id), method: :patch do |f| %>
      
        <div class="form-grop">
          <h4>Title</h4>
          <%= f.text_field :name, class: "form-control user_name" %>
        </div>
        
        <div class="form-grop">
          <h4>Introduction</h4>
          <%= f.text_area :introduction, class: "form-control user_body" %>
        </div>
      
        <div class="form-grop">
          <%= f.submit 'Update User', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

